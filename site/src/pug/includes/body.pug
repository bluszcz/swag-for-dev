include ./fork.pug

.container

    section.main.flex

        .heading.flex
            h1 Swag For Dev
            p Lorem ipsum dolor sit amet, consectetur adipiscing elit.

        .buttons.flex

            .item.flex
                label Show
                .select-wrapper
                    select(name="show" id="filter")
                        for filter in ['All difficulties', 'Easy', 'Medium', 'Hard']
                            option(value=filter) #{filter}

            .item.flex
                label In
                .select-wrapper
                    select(name="order" id="sorting")
                        for filter in ['Alphabetical', 'Alphabetical, reversed', 'Difficulty', 'Difficulty, reversed']
                            option(value=filter) #{filter}
                label order

        .content.flex#content